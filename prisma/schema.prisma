generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Users {
  
  id              String      @id @default(uuid())
  email           String      @unique
  password_hash   String
  is_verified     Boolean
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  apiKeys         ApiKeys[]
  emailLogs       EmailLogs[]
  emailTemplate   EmailTemplate[]
  
  @@map("users")
}

model ApiKeys{
  id              String      @id @default(uuid())
  userId          String?
  user            Users?      @relation(fields: [userId] , references: [id])
  name            String?
  revoked         Boolean     @default(false)
  created_at      DateTime    @default(now())

  @@map("api_keys")
  
}

model EmailTemplate{
  id               String      @id
  //name for the template
  name             String   
  html             String
  requiredFields   Json
  createdBy        String?
  user             Users?         @relation(fields: [createdBy] , references: [id])

}

model EmailLogs{
  id            String       @id @default(uuid())
  userId        String
  user          Users        @relation(fields: [userId] , references: [id])
  fromEmail     String              
  toEmail       String
  subject       String
  messageId     String      
  status        Status?      @default(PENDING)
  createdAt     DateTime     @default(now())
  sentAt        DateTime     @default(now())

  @@map("email_logs")
}

enum Status{
  PENDING
  SENT
  FAILED
}
